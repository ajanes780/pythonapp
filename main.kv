#:kivy 1.0
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text:"Please Login"
        TextInput:
            id:username
            hint_text:"User Name"
        TextInput:
            id:password
            hint_text:"Password"
        Button:
            text:"Login"
            on_press: root.login(root.ids.username.text, root.ids.password.text)
        Label:
            id:login_wrong
            text: ""
        GridLayout:
            cols:2
            Button:
                text:"Forgot Password"
            Button:
                text:"Sign Up"
                on_press: root.sign_up()

<SignUpScreen>
    GridLayout:
        cols:1
        Label:
            text: "Sign Up For Enlightenment"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text:"Submit"
            on_press:root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>
    GridLayout:
        cols:1
        Label: 
            text:"Sign Up Success !"
        Button:
            text:"Please Login"
            on_press:root.go_to_login()
        
<LoginScreenSuccess>
    GridLayout:
        cols:1
        Button:
            text: 'logout'
            on_press: root.go_log_out()
        Label:
            text: 'How do you feel?'
        TextInput:
            hint_text:'Things to try happy, sad, unloved...'
        Button:
            text:'Englighten me'
        Label:
            text: ''

<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"